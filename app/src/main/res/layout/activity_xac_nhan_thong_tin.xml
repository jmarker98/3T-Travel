<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196f3"
    tools:context=".XacNhanThongTin">

    <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtXacNhan"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Xác nhận thông tin"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/re1"
        android:padding="10dp">

        <GridLayout
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonwhite"
            android:columnCount="2"
            android:padding="5dp">

            <TextView
                android:id="@+id/sdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtXacNhan"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="SĐT:"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txtSdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/DiemDon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sdt"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Điểm đón:"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txtDiemDon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/DiemXuong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/DiemDon"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Điểm xuống:"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txtDiemXuong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp" />
        </GridLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/re2"
        android:layout_margin="10dp"
        android:background="@drawable/buttonwhite"
        android:padding="5dp">

        <TextView
            android:id="@+id/txtGhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Ghế"
            android:textColor="@android:color/black" />

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="150dp"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:layout_toRightOf="@id/txtGhe"-->
            <!--android:text="Tổng tiền"-->
            <!--android:textColor="@android:color/black" />-->

        <TextView
            android:id="@+id/Ghe"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtGhe"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/txtTongTien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtGhe"
            android:layout_marginLeft="150dp"
            android:layout_toRightOf="@id/txtGhe" />

        <TextView
            android:id="@+id/NgayDi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Ghe"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Ngày đi"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/txtNgaydi"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/NgayDi"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/Gio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Ghe"
            android:layout_marginLeft="126dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/NgayDi"
            android:text="Giờ đi"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/txtGiodi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/NgayDi"
            android:layout_marginLeft="126dp"
            android:layout_toRightOf="@id/NgayDi" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnChinhsua"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/re3"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="@drawable/backcolor"
        android:text="Chỉnh sửa"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtKiemtra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnChinhsua"
        android:gravity="center_horizontal"
        android:text="@string/name_note"
        android:textColor="#E8FF0000" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@id/txtKiemtra"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonwhite"
        android:padding="5dp">

        <TextView
            android:id="@+id/txtLuuY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/luuy"
            android:textColor="@android:color/black" />
    </ScrollView>

    <Button
        android:id="@+id/btnDatve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/backcolor"
        android:text="Đặt vé"
        android:textColor="@android:color/black" />


</RelativeLayout>