<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196f3"
    tools:context=".Main2Activity">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgMenu"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/list" />

        <ImageView
            android:id="@+id/anh"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/imgMenu"
            android:padding="10dp"
            android:src="@drawable/logodhsl" />

        <TextView
            android:id="@+id/chaoban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/anh"
            android:text="Xin chào "
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:textSize="16sp"
            android:id="@+id/txtxinchao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/chaoban"
            android:textColor="#090808" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:src="@drawable/notification" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout1"
        android:padding="5dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_margin="10dp"
                    android:id="@+id/imgxe"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/donghuong" />

                <Button
                    android:id="@+id/btnvecuatoi"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/imgxe"
                    android:layout_margin="9dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/backcolor"
                    android:text="vé của tôi"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtTuyen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnvecuatoi"
                    android:layout_margin="9dp"
                    android:layout_marginTop="10dp"
                    android:text="Đặt vé theo tuyến"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/txtT1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtTuyen"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="39dp"
                    android:text="01"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imgdoluong"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/txtTuyen"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@id/txtT1"
                    android:background="@drawable/buttonwhite"
                    android:padding="15dp"
                    android:src="@drawable/doluong" />

                <TextView

                    android:id="@+id/txtT2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgdoluong"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="29dp"
                    android:text="02"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imgConCuong"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/imgdoluong"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@id/txtT1"
                    android:background="@drawable/buttonwhite"
                    android:padding="15dp"
                    android:src="@drawable/cc" />

                <TextView

                    android:id="@+id/txtT3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgConCuong"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="29dp"
                    android:text="03"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imgThanhChuong"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/imgConCuong"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@id/txtT3"
                    android:background="@drawable/buttonwhite"
                    android:padding="15dp"
                    android:src="@drawable/thanhchuong" />

                <TextView

                    android:id="@+id/txtT4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgThanhChuong"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="29dp"
                    android:text="04"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imganhson"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/imgThanhChuong"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@id/txtT4"
                    android:background="@drawable/buttonwhite"
                    android:padding="15dp"
                    android:src="@drawable/anhson2" />

            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>
</RelativeLayout>